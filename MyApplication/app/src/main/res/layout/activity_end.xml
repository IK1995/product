<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.haja4.myapplication.MainActivity">

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/endMsg1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/endMsg3"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/endMsg3"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:text="@string/end_msg1"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/endMsg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/endMsg3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="41dp"
        android:text="@string/end_msg2"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/endMsg3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/end_msg3"
        android:textSize="25dp" />

    <Button
        android:id="@+id/backStartBut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="196dp"
        android:text="@string/back_start" />

</RelativeLayout>
